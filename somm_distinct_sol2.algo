//fonction qui retourne le nbre d'occurence d'un element du tableau dans un autre tableau
FUNCTION occurence(element,tab) : INTEGER 
    VAR
        occ1: INTEGER :=1;
        x:INTEGER :=0;;
    BEGIN
    
    REPEAT
        IF (tab[x]=element) THEN
            occ1:=2;
           
        ELSE
          x:=x+1;
    UNTIL (occ1=2 || (x=length(tab)-1)
    RETURN occ1 ;
    END
